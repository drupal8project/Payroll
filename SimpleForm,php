<?php
/**
 * @file
 * Contains \Drupal\payroll\Form\SimpleForm.
 */
namespace Drupal\payroll\Form;

use Drupal\Core\Form\FormBase;
use Drupal\Core\Form\FormStateInterface;
use Drupal\Core\Url;

class SimpleForm extends FormBase {

    // Implements HOOK_FORM_ID_alter
    public function payroll_form_alter(&$form, FormStateInterface $form_state) {
    $form['actions']['submit']['#submit'][]  = 'payroll_form_submit';
    }   


    /**
     * {@inheritdoc}
     */
    public function payroll_form_submit(&$form, FormStateInterface $form_state) {
        drupal_set_message('Logged in Succesfully!');

        // Set relative path
        $response = "\somepath";
        $Url = url::frommUserInput($response);

        //set Redirect
        $form_state->setRedirectUrl($Url);

    }
    
}
